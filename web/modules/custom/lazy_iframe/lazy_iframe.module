<?php

/**
 * @file
 * Adds lazy loading to iframes.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\lazy_iframe\LazyIframeRenderer;

/**
 * Implements hook_help().
 */
function lazy_iframe_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.lazy_iframe':
      return '<p>' . t('Adds lazy loading attribute to all iframes for improved performance.') . '</p>';
  }
}

/**
 * Implements hook_element_info_alter().
 */
function lazy_iframe_element_info_alter(array &$types) {
  foreach (['html', 'container', 'page'] as $type) {
    if (isset($types[$type])) {
      $types[$type]['#pre_render'][] = [LazyIframeRenderer::class, 'processElement'];
    }
  }
}

/**
 * Implements hook_preprocess_field() for text fields.
 */
function lazy_iframe_preprocess_field(&$variables) {
  if (isset($variables['items'][0]['content']['#text'])) {
    $variables['items'][0]['content']['#text'] = LazyIframeRenderer::processContent(
      $variables['items'][0]['content']['#text']
    );
  }
}
