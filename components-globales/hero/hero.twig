{#
/**
* @file
* Template for hero component.
*/
#}

<div class="hero">
  <h1>{{ title }}</h1>
  <p>{{ description }}</p>
  {% if button_text and button_url %}
    <a href="{{ button_url }}" class="btn">{{ button_text }}</a>
  {% endif %}
  {% if image %}
    <img src="{{ image }}" alt="{{ title }}">
  {% endif %}
</div>
